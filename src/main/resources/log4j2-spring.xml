		<!-- pattern="%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} ${LOG_LEVEL_PATTERN:-%5p} 
			${sys:PID} - [%15.15t] [%-32mdc{sessionId}] %-40.40C{1.} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}" 
			/> -->
		<!-- <Policies> -->
		<!-- <TimeBasedTriggeringPolicy interval="1" -->
		<!-- modulate="true" /> -->
